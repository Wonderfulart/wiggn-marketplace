<section class="section">
  <div class="container">
    <h1>{{ collection.title }}</h1>
    {% if collection.description != blank %}<div class="rte">{{ collection.description }}</div>{% endif %}
    <div class="grid" style="margin-top:16px">
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="card" style="display:block">
          <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
          <div class="title" style="margin-top:8px">{{ product.title }}</div>
          {% if product.price %}<div class="muted">{{ product.price | money }}</div>{% endif %}
        </a>
      {% else %}
        <p class="muted">No products found.</p>
      {% endfor %}
    </div>
  </div>
</section>