<section class="section">
  <div class="container">
    <div class="grid" style="grid-template-columns:repeat(auto-fit,minmax(280px,1fr));align-items:start">
      <div>
        <img src="{{ product.featured_image | img_url: '1000x' }}" alt="{{ product.title }}">
      </div>
      <div>
        <h1>{{ product.title }}</h1>
        <div class="price" style="font-weight:700">{{ product.price | money }}</div>
        <div class="rte" style="margin:8px 0">{{ product.description }}</div>
        {% form 'product', product %}
          {% if product.has_only_default_variant == false %}
            {% for option in product.options_with_values %}
              <label>{{ option.name }}</label>
              <select name="options[{{ option.name }}]" style="padding:10px;border:1px solid #ddd;border-radius:10px;margin-bottom:10px;width:100%">
                {% for value in option.values %}
                  <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                {% endfor %}
              </select>
            {% endfor %}
          {% endif %}
          <button class="btn btn-primary" type="submit">Add to cart</button>
        {% endform %}
      </div>
    </div>
  </div>
</section>