<section class="section">
  <div class="container">
    <div class="panel">
      <div class="tabs">
        <span class="tab active">Ending Soon</span>
        <span class="tab">Most Bids</span>
        <span class="tab">Newly Listed</span>
      </div>
      <div class="grid">
        {% for i in (1..4) %}
        <article class="auction-card">
          <img src="https://picsum.photos/seed/wigg-{{ i }}/600/400" alt="Auction item">
          <div style="padding:14px">
            <div class="meta">
              <span class="badge">LIVE</span>
              <span class="muted">{{ 5 | plus: i }} bids</span>
              <span class="muted">{{ i }}h {{ 12 | minus: i }}m</span>
            </div>
            <h3 style="margin:10px 0">Premium Lace Front Wig</h3>
            <div class="muted">Starting Bid <s>$120.00</s></div>
            <div class="price" style="font-weight:700;margin:4px 0">$150.00</div>
            <a class="btn" style="margin:8px 0 12px;background:var(--wigg-sand)" href="/pages/auctions">Place Bid</a>
          </div>
        </article>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home - Auctions Grid",
  "settings": []
}
{% endschema %}